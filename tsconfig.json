{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"]
}
